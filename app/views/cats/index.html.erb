<main class="columns-3xs max-w-5xl w-full flex justify-around flex-wrap mx-auto border-solid border-2 border-black p-10 rounded-lg flex-grow bg-[#B9AC99]">
  <div class="w-full relative">
    <!-- Nav container with adjusted margins and extended to the full width -->
    <nav class="container flex justify-between items-center bg-[#FCD9A3] inset-x-0 top-0 mx-[-40px] mt-[-40px] w-auto rounded-t-lg h-16 z-10">
      <h1 class="text-black text-2xl font-bold ml-4">Cats</h1>
      <%= link_to new_cat_path ,class: "text-white bg-black hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 inline-block h-10 ml-auto" do %>
        <%= image_tag("cat.svg", class: "inline-block mr-2 w-5") %>
        <%= "Add a Cat" %>
      <% end %>
    </nav>
  </div>
  <!-- Display cats -->
  <% @cats.each do |cat| %>
    <div class="p-5 my-5 flex items-center justify-center rounded-lg bg-[#D9D9D9] border-black border-2">
      <div>
        <a href="<%= cat_url(cat) %>", class="uppercase grid text-center">
        <img class="h-[231px] w-[231px] object-cover transition-all duration-300 cursor-pointer filter grayscale hover:grayscale-0" src="https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?ixid=M3w1OTM1Mjh8MHwxfHNlYXJjaHwxfHxjYXR8ZW58MHx8fHwxNzEzNzc5Mzc1fDA&ixlib=rb-4.0.3" alt="image description">
        <br>
        <%= cat.name %></a>
      </div>
    </div>
  <% end %>
</main>
