<main class="columns-3xs max-w-5xl w-full flex justify-around flex-wrap mx-auto border-solid border-2 border-black p-10 rounded-lg flex-grow bg-[#B9AC99]">
    <div class="w-full relative pb-10">
        <nav class="container flex justify-content items-center bg-[#FCD9A3] inset-x-0 top-0 mx-[-40px] mt-[-40px] w-auto rounded-t-lg h-16 z-10">
         <h1 class="text-black text-2xl font-bold ml-4"><%= @cat.name %></h1>
        <%= link_to root_path ,class: "text-white bg-black hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 inline-block h-10 ml-auto" do %>
            <%= image_tag("arrow-left.svg", class: "inline-block mr-2 w-5") %>
            <%= "Back to cats" %>
        <% end %>
        </nav>
    </div>
    <div class="flex items-center flex-col">
        <img class="h-[331px] w-[331px] object-cover rounded-lg border-black border-2" src="https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?ixid=M3w1OTM1Mjh8MHwxfHNlYXJjaHwxfHxjYXR8ZW58MHx8fHwxNzEzNzc5Mzc1fDA&ixlib=rb-4.0.3">
        <h1 class="text-black text-2xl font-bold ml-4 text-center p-10"><%= @cat.name %></h1>
        <table class="w-full h-auto text-sm text-left rtl:text-right text-gray-600 border-black border-2">
            <thead class="text-xs text-gray-700 uppercase bg-orange-100">
                <tr>
                    <th class="px-6 py-3">Name</th>
                    <th class="px-6 py-3">Age</th>
                    <th class="px-6 py-3">Color</th>
                    <th class="px-6 py-3">Sex</th>
                    <th class="px-6 py-3 w-80">Descriptcion</th>
                </tr>
            </thead>
            <tbody>
                <tr class="bg-white border-b">
                    <td class="px-6 py-4"><%= @cat.name %></td>
                    <td class="px-6 py-4"><%= @cat.age %></td>
                    <td class="px-6 py-4"><%= @cat.color %></td>
                    <td class="px-6 py-4"><%= @cat.sex %></td>
                    <td class="px-6 py-4"><%= @cat.description %></td>
                </tr>
            </tbody>
        </table>
        <br>
        <%= link_to edit_cat_url ,class: "text-white bg-black hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 inline-block h-10" do %>
        <%= image_tag("pencil.svg", class: "inline-block mr-2 w-5")%>
        <%= "Edit a cat" %>
        <% end %>
        <br><br>
        <h1 class="text-black text-xl font-bold ml-4 text-center p-10">Rental Requests</h1>
            <% if @cat.rental_requests.empty? %>
                <p><%= image_tag("mood-empty.svg", class: "inline-block mr-2 w-5")%>No rental requests for this cat</p>
            <% else %>
                <table class="w-full h-auto text-sm text-left rtl:text-right text-gray-600 border-black border-2">
                    <thead class="text-xs text-gray-700 uppercase bg-orange-100">
                        <tr>
                            <th class="px-6 py-3">Requester</th>
                            <th class="px-6 py-3">Start Date</th>
                            <th class="px-6 py-3">End Date</th>
                            <th class="px-6 py-3">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @cat.rental_requests.each do |req| %>
                            <%= render 'rep', req: req %>
                        <% end %>
                    </tbody>
                </table>
            <% end %>
            <a href="<%= new_cat_cat_rental_request_url(@cat) %>" class="text-white bg-black hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 mt-10 inline-block">
                Create a rental request
            </a>
    </div> 
</main>